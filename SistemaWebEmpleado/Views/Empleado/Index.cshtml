@model IEnumerable<SistemaWebEmpleado.Models.Empleado>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
}

@section sidebar {
    Administración de empleados.
}
@Html.ActionLink("Crear Empleado", "Create", "Empleado")
<div>
    <table border="1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DNI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Legajo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.DNI)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Legajo)
                        </td>
                        <td>
                        @Html.ActionLink(item.Titulo, "ListarPorTitulo", new { titulo = item.Titulo })
                        </td>
                        <td>
                        @Html.ActionLink("TraerDetalles", "TraerUno", new { id = item.EmpleadoId })
                        </td>
                        <td>
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.EmpleadoId })
                        </td>
                        <td>
                        @Html.ActionLink("Editar", "Editar", new { id = item.EmpleadoId })
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

